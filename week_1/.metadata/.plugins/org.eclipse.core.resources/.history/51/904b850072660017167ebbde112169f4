package com.md.q2.driver;

public class Driver {

	public static void main(String[] args) {
		fib(0,5);
	}
	
	public static int fib(int n, int counter) {
		//base case
		if(counter == 0) {
			return 1;
		}
		
		//recursive case
		else {
			counter--;
			System.out.println("Fib of " + counter + " is: " + (fib(n-2,counter) + fib(n-1,counter)));
		}
			
		
		
	}
	
	
}
