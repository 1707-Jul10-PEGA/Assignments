package com.md.q4;

public class Factorial {

	/*
	 * Write a program to compute N factorial
	 * */
	public static void main(String[] args) {
		System.out.println(factorial(4));
	}
	
	/*Recursive factorial*/
	public static int factorial(int n) {
		//base case
		if(n == 0) {
			return n;
		}
		
		//recursive case
		else if (n == 1) {
			return 1;
		}
		
		else
			return n * factorial(n-1);
				
	}
	
}
