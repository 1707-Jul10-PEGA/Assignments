package com.md.q6;

/*
 * Write a program to determine if an integer is even without 
 * using the modulus operator (%)
 */
public class EvenOrOdd {

	public static void main(String[] args) {
		int number = 4;
		
		
	}
	
	
	public static boolean isEven(int n) {
		
		if( (number&1)==0  ) {
			return true;
		}
		else
			return false;
		
			
		return false;
	}
	
}
